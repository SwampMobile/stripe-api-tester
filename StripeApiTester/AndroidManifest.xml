<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swampmobile.stripeapitester"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
        
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.swampmobile.stripeapitester.app.App"
        >
        <activity
            android:name="com.swampmobile.stripeapitester.activities.SplashActivity_"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWithoutActionBarTitle"
            android:noHistory="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.swampmobile.stripeapitester.activities.CardTestListActivity_" 
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWithoutActionBarIcon"
            android:label="Card Tests"
            />
        <activity 
            android:name="com.swampmobile.stripeapitester.activities.CardTestActivity_" 
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWithoutActionBarIcon"
            android:label="Card Test"
            />
    </application>

</manifest>
